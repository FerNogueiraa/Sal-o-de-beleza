generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Cliente {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  usuario      String         @unique
  senha        String
  endereco     String
  cpf          String         @unique
  telefone     String
  agendamentos Agendamento[]  
}

model Funcionario {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  usuario      String   @unique
  senha        String
  endereco     String
  cpf          String   @unique
  telefone     String
}

model Servico {
  id           String         @id @default(auto()) @map("_id") @db.ObjectId
  nome         String
  valor        Float
  agendamentos Agendamento[]  
}

model Agendamento {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  data      String
  horario   String
  cliente   Cliente  @relation(fields: [idCliente], references: [id])
  idCliente String
  servico   Servico  @relation(fields: [idServico], references: [id])
  idServico String
}